<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_old_android_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="life.centaurs.sunlife.activities.OldAndroidVideoActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </SurfaceView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_video_busy_65"
        android:background="@null"
        android:layout_marginStart="109dp"
        android:id="@+id/imageButtonVideoBusu"
        android:contentDescription="@string/video_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_alignTop="@+id/imageButtonPhoto"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_video_online_65"
        android:layout_alignTop="@+id/imageButtonVideoBusu"
        android:layout_alignStart="@+id/imageButtonVideoBusu"
        android:background="@null"
        android:id="@+id/imageButtonVideoOnline"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_photo"
        android:layout_marginStart="41dp"
        android:id="@+id/imageButtonPhoto"
        android:contentDescription="@string/photo_button"
        android:backgroundTint="@android:color/transparent"
        android:background="@null"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButtonVideoBusu"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_rotate_camera"
        android:background="@null"
        android:id="@+id/imageButtonRotateCamera"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_full_screen_on"
        android:background="@null"
        android:id="@+id/imageButtonFullScreenOn"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/imageButtonRotateCamera"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_full_screen_off"
        android:background="@null"
        android:id="@+id/imageButtonFullScreenOff"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_alignTop="@+id/imageButtonFullScreenOn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
