<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_old_android_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="life.centaurs.sunlife.activities.OldAndroidVideoActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </SurfaceView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_camera_rotate"
        android:background="@null"
        android:id="@+id/imageButtonRotateCamera"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/imageButtonFullScreen"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/imageButtonRotateCamera"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_photo"
        android:id="@+id/imageButtonPhoto"
        android:background="@null"
        android:onClick="onClick"
        android:layout_marginEnd="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageButtonRotateCamera"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/imageButtonVideo"
        android:contentDescription="@string/camera_button"
        android:backgroundTint="@android:color/transparent"
        android:onClick="onClick"
        android:layout_marginEnd="59dp"
        android:layout_alignTop="@+id/imageButtonPhoto"
        android:layout_toStartOf="@+id/imageButtonPhoto" />

</RelativeLayout>
